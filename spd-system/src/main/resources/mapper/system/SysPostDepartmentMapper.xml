<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spd.system.mapper.SysPostDepartmentMapper">

	<resultMap type="SysPostDepartment" id="SysPostDepartmentResult">
		<result property="postId"     column="post_id"      />
		<result property="departmentId"     column="department_id"      />
	</resultMap>

	<delete id="deletePostDepartmentByPostId" parameterType="Long">
		delete from sys_post_department where post_id=#{postId}
	</delete>

	<insert id="batchPostDepartment">
		insert into sys_post_department(post_id, department_id) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.postId},#{item.departmentId})
		</foreach>
	</insert>

	<select id="selectDepartmentListByPostId" parameterType="Long" resultType="java.lang.Long">
		select department_id from sys_post_department where post_id=#{postId}
	</select>

</mapper>

