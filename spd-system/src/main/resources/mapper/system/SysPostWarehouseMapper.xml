<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spd.system.mapper.SysPostWarehouseMapper">

	<resultMap type="SysPostWarehouse" id="SysPostWarehouseResult">
		<result property="postId"     column="post_id"      />
		<result property="warehouseId"     column="warehouse_id"      />
	</resultMap>

	<delete id="deletePostWarehouseByPostId" parameterType="Long">
		delete from sys_post_warehouse where post_id=#{postId}
	</delete>

	<insert id="batchPostWarehouse">
		insert into sys_post_warehouse(post_id, warehouse_id) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.postId},#{item.warehouseId})
		</foreach>
	</insert>

	<select id="selectWarehouseListByPostId" parameterType="Long" resultType="java.lang.Long">
		select warehouse_id from sys_post_warehouse where post_id=#{postId}
	</select>

</mapper>

