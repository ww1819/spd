<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spd.equipment.mapper.EquipmentStorageMapper">
    
    <resultMap type="EquipmentStorage" id="EquipmentStorageResult">
        <result property="storageId"    column="storage_id"    />
        <result property="storageNo"    column="storage_no"    />
        <result property="warehouseId"    column="warehouse_id"    />
        <result property="warehouseName"    column="warehouse_name"    />
        <result property="storageStatus"    column="storage_status"    />
        <result property="createrId"    column="creater_id"    />
        <result property="createrName"    column="creater_name"    />
        <result property="billDate"    column="bill_date"    />
        <result property="auditorId"    column="auditor_id"    />
        <result property="auditorName"    column="auditor_name"    />
        <result property="auditDate"    column="audit_date"    />
        <result property="storageAmount"    column="storage_amount"    />
        <result property="supplier"    column="supplier"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectEquipmentStorageVo">
        select s.storage_id, s.storage_no, s.warehouse_id, w.name as warehouse_name, 
               s.storage_status, s.creater_id, u.nick_name as creater_name, 
               s.bill_date, 
               s.auditor_id, au.nick_name as auditor_name, s.audit_date,
               s.storage_amount, s.supplier, s.remark, 
               s.create_by, s.create_time, s.update_by, s.update_time 
        from equipment_storage s
        left join fd_warehouse w on s.warehouse_id = w.id
        left join sys_user u on s.creater_id = u.user_id
        left join sys_user au on s.auditor_id = au.user_id
    </sql>

    <select id="selectEquipmentStorageList" parameterType="EquipmentStorage" resultMap="EquipmentStorageResult">
        <include refid="selectEquipmentStorageVo"/>
        <where>  
            <if test="storageNo != null  and storageNo != ''"> and s.storage_no like concat('%', #{storageNo}, '%')</if>
            <if test="warehouseId != null "> and s.warehouse_id = #{warehouseId}</if>
            <if test="storageStatus != null  and storageStatus != ''"> and s.storage_status = #{storageStatus}</if>
            <if test="createrId != null "> and s.creater_id = #{createrId}</if>
            <if test="billDate != null "> and date(s.bill_date) = date(#{billDate})</if>
            <if test="params.beginDate != null and params.beginDate != ''"><!-- 开始时间检索 -->
                and date_format(s.bill_date,'%y%m%d') &gt;= date_format(#{params.beginDate},'%y%m%d')
            </if>
            <if test="params.endDate != null and params.endDate != ''"><!-- 结束时间检索 -->
                and date_format(s.bill_date,'%y%m%d') &lt;= date_format(#{params.endDate},'%y%m%d')
            </if>
            <if test="equipmentName != null and equipmentName != ''">
                and exists (
                    select 1 from equipment_storage_detail d 
                    where d.storage_id = s.storage_id 
                    and d.equipment_name like concat('%', #{equipmentName}, '%')
                )
            </if>
        </where>
        order by s.create_time desc
    </select>
    
    <select id="selectEquipmentStorageById" parameterType="Long" resultMap="EquipmentStorageResult">
        <include refid="selectEquipmentStorageVo"/>
        where s.storage_id = #{storageId}
    </select>
        
    <insert id="insertEquipmentStorage" parameterType="EquipmentStorage" useGeneratedKeys="true" keyProperty="storageId">
        insert into equipment_storage
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="storageId != null">storage_id,</if>
            <if test="storageNo != null">storage_no,</if>
            <if test="warehouseId != null">warehouse_id,</if>
            <if test="storageStatus != null">storage_status,</if>
            <if test="createrId != null">creater_id,</if>
            <if test="billDate != null">bill_date,</if>
            <if test="storageAmount != null">storage_amount,</if>
            <if test="supplier != null">supplier,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="storageId != null">#{storageId},</if>
            <if test="storageNo != null">#{storageNo},</if>
            <if test="warehouseId != null">#{warehouseId},</if>
            <if test="storageStatus != null">#{storageStatus},</if>
            <if test="createrId != null">#{createrId},</if>
            <if test="billDate != null">#{billDate},</if>
            <if test="storageAmount != null">#{storageAmount},</if>
            <if test="supplier != null">#{supplier},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateEquipmentStorage" parameterType="EquipmentStorage">
        update equipment_storage
        <trim prefix="SET" suffixOverrides=",">
            <if test="storageNo != null">storage_no = #{storageNo},</if>
            <if test="warehouseId != null">warehouse_id = #{warehouseId},</if>
            <if test="storageStatus != null">storage_status = #{storageStatus},</if>
            <if test="createrId != null">creater_id = #{createrId},</if>
            <if test="billDate != null">bill_date = #{billDate},</if>
            <if test="storageAmount != null">storage_amount = #{storageAmount},</if>
            <if test="supplier != null">supplier = #{supplier},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where storage_id = #{storageId}
    </update>

    <delete id="deleteEquipmentStorageById" parameterType="Long">
        delete from equipment_storage where storage_id = #{storageId}
    </delete>

    <delete id="deleteEquipmentStorageByIds" parameterType="String">
        delete from equipment_storage where storage_id in 
        <foreach item="storageId" collection="array" open="(" separator="," close=")">
            #{storageId}
        </foreach>
    </delete>

    <update id="auditEquipmentStorage" parameterType="EquipmentStorage">
        update equipment_storage
        <trim prefix="SET" suffixOverrides=",">
            <if test="storageStatus != null">storage_status = #{storageStatus},</if>
            <if test="auditorId != null">auditor_id = #{auditorId},</if>
            <if test="auditDate != null">audit_date = #{auditDate},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where storage_id = #{storageId}
    </update>
</mapper>
