<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spd.gz.mapper.GzDepInventoryMapper">

    <resultMap type="GzDepInventory" id="GzDepInventoryResult">
        <result property="id"    column="id"    />
        <result property="materialId"    column="material_id"    />
        <result property="departmentId"    column="department_id"    />
        <result property="qty"    column="qty"    />
        <result property="unitPrice"    column="unit_price"    />
        <result property="amt"    column="amt"    />
        <result property="batchNo"    column="batch_no"    />
        <result property="materialNo"    column="material_no"    />
        <result property="materialDate"    column="material_date"    />
        <result property="warehouseDate"    column="warehouse_date"    />
        <result property="inHospitalCode"    column="in_hospital_code"    />
        <result property="endTime"    column="end_time"    />
        <result property="shipmentNo"    column="shipmentNo"    />
        <result property="auditBy"    column="auditBy"    />
        <result property="auditDate"    column="auditDate"    />
        <association property="department"    column="id" javaType="FdDepartment" resultMap="departmentResult" />
        <association property="material"    column="id" javaType="FdMaterial" resultMap="materialResult" />
        <association property="warehouse"    column="id" javaType="FdWarehouse" resultMap="warehouseResult" />
    </resultMap>

    <resultMap id="departmentResult" type="FdDepartment">
        <id     property="id"    column="dId"     />
        <result property="code"  column="departmentCode"   />
        <result property="name"  column="departmentName"   />
    </resultMap>

    <resultMap id="materialResult" type="FdMaterial">
        <id     property="id"    column="mId"     />
        <result property="code"  column="materialCode"   />
        <result property="name"  column="materialName"   />
        <result property="speci"  column="materialSpeci"   />
        <result property="model"  column="materialModel"   />
        <result property="udiNo"  column="materialUdiNo"   />
        <result property="unitId"  column="materialUnitId"   />
        <association property="fdFactory"    column="factoryId" javaType="FdFactory" resultMap="fdFactoryResult" />
        <association property="supplier"    column="materialSupplierId" javaType="FdSupplier" resultMap="materialSupplierResult" />
        <association property="fdUnit"    column="materialUnitId" javaType="FdUnit" resultMap="unitResult" />
    </resultMap>
    
    <resultMap id="unitResult" type="FdUnit">
        <id     property="unitId"    column="uId"     />
        <result property="unitName"  column="unitName"   />
    </resultMap>
    
    <resultMap id="fdFactoryResult" type="FdFactory">
        <id     property="factoryId"    column="factoryId"     />
        <result property="factoryName"  column="factoryName"   />
    </resultMap>
    
    <resultMap id="materialSupplierResult" type="FdSupplier">
        <id     property="id"    column="msId"     />
        <result property="code"  column="materialSupplierCode"   />
        <result property="name"  column="materialSupplierName"   />
    </resultMap>
    
    <resultMap id="warehouseResult" type="FdWarehouse">
        <id     property="id"    column="wId"     />
        <result property="code"  column="warehouseCode"   />
        <result property="name"  column="warehouseName"   />
    </resultMap>

    <sql id="selectGzDepInventoryVo">
        select gz.id, gz.material_id, gz.department_id, gz.qty, gz.unit_price, gz.amt,
				gz.batch_no, gz.material_no, gz.material_date, gz.warehouse_date,
				gz.in_hospital_code,
				goe.end_time,
				d.id dId,d.code departmentCode,d.name departmentName,
				m.id mId,m.code materialCode,m.name materialName,
				m.speci as materialSpeci,
				m.model as materialModel,
				m.udi_no as materialUdiNo,
				m.supplier_id as materialSupplierId,
				m.unit_id as materialUnitId,
				f.factory_id as factoryId,f.factory_name as factoryName,
				ms.id msId,ms.code materialSupplierCode,ms.name materialSupplierName,
				w.id wId,w.code warehouseCode,w.name warehouseName,
				u.unit_id uId,u.unit_name as unitName,
				gs.shipment_no as shipmentNo,
				gs.create_by as createBy,
				gs.create_time as createTime,
				gs.update_by as auditBy,
				gs.audit_date as auditDate
        from gz_dep_inventory gz
        left join fd_department d on gz.department_id = d.id
        left join fd_material m on gz.material_id = m.id
        left join fd_factory f on m.factory_id = f.factory_id
        left join fd_supplier ms on m.supplier_id = ms.id
        left join fd_unit u on m.unit_id = u.unit_id
        left join gz_order_entry goe on gz.batch_no = goe.batch_no
        left join gz_order go on goe.paren_id = go.id
        left join fd_warehouse w on go.warehouse_id = w.id
        left join gz_shipment_entry gse on gz.batch_no = gse.batch_no and gz.in_hospital_code = gse.in_hospital_code
        left join gz_shipment gs on gse.paren_id = gs.id
    </sql>

    <select id="selectGzDepInventoryList" parameterType="GzDepInventory" resultMap="GzDepInventoryResult">
        <include refid="selectGzDepInventoryVo"/>
        where 1=1
        <!-- 只查询有院内码的记录，确保每个院内码一行 -->
        and gz.in_hospital_code IS NOT NULL and gz.in_hospital_code != ''
        <!-- 根据showZeroStock参数决定是否过滤数量为0的记录 -->
        <if test="showZeroStock == null or showZeroStock == false">
            and gz.qty &gt; 0
        </if>
        <if test="materialId != null "> and gz.material_id = #{materialId}</if>
        <if test="departmentId != null "> and gz.department_id = #{departmentId}</if>
        <if test="supplierId != null "> and m.supplier_id = #{supplierId}</if>
        <if test="batchNo != null  and batchNo != ''"> and gz.batch_no = #{batchNo}</if>
        <if test="materialNo != null  and materialNo != ''"> and gz.material_no = #{materialNo}</if>
        <if test="materialDate != null "> and gz.material_date = #{materialDate}</if>
        <if test="warehouseDate != null "> and gz.warehouse_date = #{warehouseDate}</if>
        <if test="inHospitalCode != null  and inHospitalCode != ''"> and gz.in_hospital_code = #{inHospitalCode}</if>
        <if test="materialName != null  and materialName != ''"> and m.name like concat('%', #{materialName}, '%')</if>
        <!-- 按院内码排序，确保每个院内码一行显示 -->
        order by gz.in_hospital_code, gz.id desc
    </select>

    <select id="selectGzDepInventoryById" parameterType="Long" resultMap="GzDepInventoryResult">
        <include refid="selectGzDepInventoryVo"/>
        where gz.id = #{id}
    </select>

    <insert id="insertGzDepInventory" parameterType="GzDepInventory" useGeneratedKeys="true" keyProperty="id">
        insert into gz_dep_inventory
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="materialId != null">material_id,</if>
            <if test="departmentId != null">department_id,</if>
            <if test="qty != null">qty,</if>
            <if test="unitPrice != null">unit_price,</if>
            <if test="amt != null">amt,</if>
            <if test="batchNo != null">batch_no,</if>
            <if test="materialNo != null">material_no,</if>
            <if test="materialDate != null">material_date,</if>
            <if test="warehouseDate != null">warehouse_date,</if>
            <if test="inHospitalCode != null">in_hospital_code,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="materialId != null">#{materialId},</if>
            <if test="departmentId != null">#{departmentId},</if>
            <if test="qty != null">#{qty},</if>
            <if test="unitPrice != null">#{unitPrice},</if>
            <if test="amt != null">#{amt},</if>
            <if test="batchNo != null">#{batchNo},</if>
            <if test="materialNo != null">#{materialNo},</if>
            <if test="materialDate != null">#{materialDate},</if>
            <if test="warehouseDate != null">#{warehouseDate},</if>
            <if test="inHospitalCode != null">#{inHospitalCode},</if>
         </trim>
    </insert>

    <update id="updateGzDepInventory" parameterType="GzDepInventory">
        update gz_dep_inventory
        <trim prefix="SET" suffixOverrides=",">
            <if test="materialId != null">material_id = #{materialId},</if>
            <if test="departmentId != null">department_id = #{departmentId},</if>
            <if test="qty != null">qty = #{qty},</if>
            <if test="unitPrice != null">unit_price = #{unitPrice},</if>
            <if test="amt != null">amt = #{amt},</if>
            <if test="batchNo != null">batch_no = #{batchNo},</if>
            <if test="materialNo != null">material_no = #{materialNo},</if>
            <if test="materialDate != null">material_date = #{materialDate},</if>
            <if test="warehouseDate != null">warehouse_date = #{warehouseDate},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGzDepInventoryById" parameterType="Long">
        delete from gz_dep_inventory where id = #{id}
    </delete>

    <delete id="deleteGzDepInventoryByIds" parameterType="String">
        delete from gz_dep_inventory where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectGzDepInventoryOne" parameterType="java.lang.String" resultMap="GzDepInventoryResult">
        select * from gz_dep_inventory where batch_no = #{batchNo} order by id desc limit 1
    </select>

    <select id="selectTKDepInvntoryByBatchNo" parameterType="java.lang.String" resultType="java.math.BigDecimal">
        select SUM(IFNULL(qty, 0)) from gz_dep_inventory
        where batch_no = #{batchNo}
    </select>
    
    <select id="selectGzDepInventoryByCodeAndDept" resultMap="GzDepInventoryResult">
        <include refid="selectGzDepInventoryVo"/>
        where gz.in_hospital_code = #{inHospitalCode}
        and gz.department_id = #{departmentId}
        <!-- 不过滤数量为0的记录 -->
        limit 1
    </select>
</mapper>
